<%= form_for(@task) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new task..." %>
    <%= f.label :todolist_id, "Todo list" %>
    <%= f.collection_select :todolist_id, @todolist_items, :id, :name %>


  </div>
  <%= f.submit "Add", class: "btn btn-large btn-primary" %>
<% end %>

