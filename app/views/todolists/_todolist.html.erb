<h4>
  <span class="content"><%= todolist.name %> (<%= todolist.tasks.size %>)</span>
</h4>
<div class="row" >
 <div class="span8">
    <% if todolist.tasks.any? %>
      <ol class="tasks">
        <%= render todolist.tasks %>
      </ol>
      <%= will_paginate @tasks %>
    <% end %>
  </div>
</div>

